FROM node:14.20-alpine AS build
WORKDIR /app
COPY package.json ./
RUN npm install
COPY . .
RUN npm run build

FROM nginx:alpine AS prod-stage
COPY --from=build /app/dist/* /usr/share/nginx/html
COPY ./nginx-custom.conf /etc/nginx/conf.d/default.conf
ENV PORT 80
EXPOSE $PORT
CMD ["nginx", "-g", "daemon off;"]
